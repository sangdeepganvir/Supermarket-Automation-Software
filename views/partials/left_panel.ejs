<style>
  @import url("https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800;900&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@200;300;400;500;600;700;800&display=swap");
  :root {
    --playfair-display: "Playfair Display", serif;
    --plus-jakarta-sans: "Plus Jakarta Sans", sans-serif;
  }
  body {
    font-family: var(--playfair-display);
  }
</style>
<div
  style="font-size: large; background-color: #b1454a; width: 230px"
  class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100"
>
  <div style="height: 50px">
    <a
      href=""
      class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none"
    >
      <span
        class="fs-5 d-none d-sm-inline"
        style="font-family: var(--plus-jakarta-sans); font-weight: 700"
        >RegalRetail</span
      >
    </a>
  </div>
  <img src="logo.png" height="150px" width="200px" />
  <hr width="100%" color="green" />
  <ul
    class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start"
    id="menu"
  >
    <li>
      <a
        href="/welcome"
        class="nav-link px-0 align-middle"
        style="color: #ededed"
      >
        <i class="fs-4 bi-people"></i>
        <span
          class="ms-1 d-none d-sm-inline"
          style="font-family: var(--plus-jakarta-sans); font-weight: 700"
          >Home</span
        >
      </a>
    </li>

    <% if (currentUser.user_type == "Manager"){%>
    <li>
      <a href="/stat" class="nav-link px-0 align-middle" style="color: #ededed">
        <i class="fs-4 bi-table"></i>
        <span
          class="ms-1 d-none d-sm-inline"
          style="font-family: var(--plus-jakarta-sans); font-weight: 700"
          >Sales Statistics</span
        >
      </a>
    </li>
    <li>
      <a
        href="/register"
        class="nav-link px-0 align-middle"
        style="color: #ededed"
      >
        <i class="fs-4 bi-table"></i>
        <span
          class="ms-1 d-none d-sm-inline"
          style="font-family: var(--plus-jakarta-sans); font-weight: 700"
          >Add Staff</span
        >
      </a>
    </li>
    <% } %> <% if (currentUser.user_type != "Clerk"){ %>
    <li>
      <a
        href="/inventory"
        class="nav-link px-0 align-middle"
        style="color: #ededed"
      >
        <i class="fs-4 bi-table"></i>
        <span
          class="ms-1 d-none d-sm-inline"
          style="font-family: var(--plus-jakarta-sans); font-weight: 700"
          >Inventory</span
        >
      </a>
    </li>
    <% } %> <% if (currentUser.user_type == "Clerk"){ %>
    <li>
      <a href="/bill" class="nav-link px-0 align-middle" style="color: #ededed">
        <i class="fs-4 bi-table"></i>
        <span
          class="ms-1 d-none d-sm-inline"
          style="font-family: var(--plus-jakarta-sans); font-weight: 700"
          >Generate Bill</span
        >
      </a>
    </li>
    <% } %>
    <li>
      <a
        href="/about"
        class="nav-link px-0 align-middle"
        style="color: #ededed"
      >
        <i class="fs-4 bi-table"></i>
        <span
          class="ms-1 d-none d-sm-inline"
          style="font-family: var(--plus-jakarta-sans); font-weight: 700"
          >About</span
        >
      </a>
    </li>
  </ul>
  <hr />
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const toggleSidebarButton = document.getElementById("toggleSidebar");
    const sidebar = document.getElementById("sidebar");

    toggleSidebarButton.addEventListener("click", function () {
      sidebar.classList.toggle("collapsed");
    });
  });
</script>
